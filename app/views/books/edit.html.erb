<h1>Editing Book</h1>

<%= form_with model: @book, url:book_path, local:true do |f| %>
  <p>Title</p>
  <%= f.text_field :title %>
  <p>Body</p>
  <%= f.text_area :body %>

  <P><%= f.submit 'update Book' %></p>
<% end %>

<p>
  <%= link_to 'show', book_path %>
  |
  <%= link_to 'Back', books_path %>
</p>

